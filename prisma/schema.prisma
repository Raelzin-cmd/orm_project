generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?
  cpf       String
  pais      String?  @map("country") @db.Char(2)
  createdAt DateTime @default(now())

  @@map("authors")
}
