generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?
  cpf       String
  createdAt DateTime @default(now())
  pais      String?  @map("country") @db.Char(2)
  profile   Profile?

  @@map("authors")
}

model Profile {
  id          String @id @default(uuid())
  description String
  author      Author @relation(fields: [authorId], references: [id])
  authorId    Int    @unique @map("author_id")

  @@map("profiles")
}
