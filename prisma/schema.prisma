// Prisma schema: modelos do domínio e configuração do client/datasource
// - Autor: representa usuários-autores com perfil opcional e posts relacionados
// - Profile: relacionamento 1:1 com Author
// - Post: posts escritos por Authors e relacionados a categorias via PostCategory
// - Category: categorias reutilizáveis
// - PostCategory: tabela de junção para relação N:N entre Post e Category

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  bio       String?
  cpf       String
  createdAt DateTime @default(now())
  pais      String?  @map("country") @db.Char(2)
  profile   Profile?
  posts     Post[]

  @@map("authors")
}

// Profile -> um para um
model Profile {
  id          String @id @default(uuid())
  description String
  author      Author @relation(fields: [authorId], references: [id])
  authorId    Int    @unique @map("author_id")

  @@map("profiles")
}

// Posts -> um para muitos
model Post {
  id             String         @id @default(uuid())
  title          String
  content        String
  createdAt      DateTime       @default(now()) @db.Timestamp()
  author         Author         @relation(fields: [authorId], references: [id])
  authorId       Int            @map("author_id")
  postCategories PostCategory[]

  @@map("posts")
}

// Category -> muitos para muitos
model Category {
  id           String         @id @default(uuid())
  name         String
  postCategory PostCategory[]

  @@map("categories")
}

model PostCategory {
  post       Post     @relation(fields: [postId], references: [id])
  postId     String   @map("post_id")
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String   @map("category_id")

  @@id([postId, categoryId])
  @@map("post_categories")
}
